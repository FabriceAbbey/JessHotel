{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_index' %}

    {% block main %}
        <h1>{{ 'title.post_list'|trans }}</h1>        
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">

                <div class="x_panel">
                    <div class="x_title">
                        <h2>Posts <small></small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="">
                                <a href="{{ path('admin_post_new') }}" class=""><i class="fa fa-plus"></i></a>
                            </li>
                            {#<li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>#}
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        {% for post in posts %}
                            <article class="media event">
                                <a class="pull-left date">
                                    <p class="month">April</p>
                                    <p class="day">23</p>
                                </a>
                                <div class="media-body">
                                    <a class="title" href="#">Item Two Title</a>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                                </div>
                            </article>
                        {% endfor %}

                        {% if posts|length == 0 %}
                            <article class="media event">
                                <div class="media-body">
                                    <a class="title" href="#"></a>
                                    <p>{{ 'post.no_posts_found'|trans }}</p>
                                </div>
                            </article>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Future Events<small></small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="{{ path('admin_event_new') }}" class=""><i class="fa fa-plus"></i></a>
                            </li>
                            {#<li><a class="close-link"><i class="fa fa-close"></i></a>
                            </li>#}
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        {% for event in events %}
                            <article class="media event">
                                <a class="pull-left date">
                                    <p class="month">April</p>
                                    <p class="day">23</p>
                                </a>
                                <div class="media-body">
                                    <a class="title" href="#">Item One Title</a>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                                </div>
                            </article>
                        {% endfor %}

                        {% if events|length == 0 %}
                            <article class="media event">
                                <div class="media-body">
                                    <a class="title" href="#"></a>
                                    <p>{{ 'event.no_event_found'|trans }}</p>
                                </div>
                            </article>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="x_panel fixed_height_320">
                    <div class="x_title">
                        <h2>Rooms Booking<small></small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <h4>Room Type</h4>
                        {% for room in rooms %}
                        <div class="widget_summary">
                            <div class="w_left w_25">
                                <span>{{room.name}}</span>
                            </div>
                            <div class="w_center w_55">
                                <div class="progress">
                                    <div class="progress-bar bg-green" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 66%;">
                                        <span class="sr-only">60% Complete</span>
                                    </div>
                                </div>
                            </div>
                            <div class="w_right w_20">
                                <span></span>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        {% endfor %}
                 </div>
                </div>
            </div>
                 
                 <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="x_panel fixed_height_320">
                    <div class="x_title">
                        <h2>Booking<small></small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <h4>Room Type</h4>
                        {% for booking in bookings %}
                        <div class="widget_summary">
                            <div class="w_left w_25">
                                <span>{{room.name}}</span>
                            </div>
                            <div class="w_center w_55">
                                <div class="progress">
                                    <div class="progress-bar bg-green" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 66%;">
                                        <span class="sr-only">60% Complete</span>
                                    </div>
                                </div>
                            </div>
                            <div class="w_right w_20">
                                <span></span>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        {% endfor %}
                 </div>
                </div>
            </div>
            Â </div>
        {% endblock %}

    {% block sidebar %}


        {{ parent() }}

        {{ show_source_code(_self) }}
    {% endblock %}

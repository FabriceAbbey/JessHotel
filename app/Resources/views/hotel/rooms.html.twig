{% extends 'base.html.twig' %}

{% block body_id 'jess_rooms' %}

    {% block main %}
        <!-- Site Main -->
        <div class="site-main">
            <!-- Section Page Title -->
            <div class="section">
                <div class="widget-page-title">
                    <div class="widget-background" data-background="/assets/img/photo-title.jpg"></div>
                    <div class="wrapper-inner">
                        <!-- Title -->
                        <h5>EXPERIENCE THE FREEDOM</h5>
                        <h1>Rooms</h1>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Pellentesque eget commodo orci. Integer varius nibh eu mattis porta. Pellentesque dictum sem eget cursus semper. Nullam quis blandit lorem. Morbi blandit orci urna, eu congue magna faucibus at. In bibendum in mauris nec ultrices. Nunc et magna velit.</p>
                        <!-- Title End -->
                        <!-- Breadcrumb -->
                        <div class="widget-breadcrumb">
                            <ul>
                                <li><a href="{{ path("hotel_index") }}">HOME</a></li>
                                <li>ROOMS</li>
                            </ul>
                        </div>
                        <!-- Breadcrumb End -->
                    </div>
                </div>
            </div>
            <!-- Section Page Title End -->

            <!-- Section Rooms -->
            <div class="section">
                <div class="wrapper-inner">
                    <!-- Rooms List -->
                    <div class="widget-rooms-list">
                        {% for room in rooms %}
                            <div class="rooms-item">
                                <div class="item-photo">
                                    <a href="{{path('hotel_room_detail', {'id': room.id}) }}" data-background="/assets/img/photo-room-1.jpg"></a>
                                </div>
                                <div class="item-desc">
                                    <h2><a href="{{path('hotel_room_detail', {'id': room.id}) }}">{{room.name}}</a></h2>
                                    <p>Sed fermentum eleifend dui eu faucibus. Donec facilisis, ligula eu interdum luctus nunc massa fermentum</p>
                                    <div class="desc-features">
                                        <ul>
                                            {% for item in room.amenities %}
                                                <li><i class="fa fa-check"></i>{{ item }}</li>
                                                {% endfor %}
                                        </ul>
                                    </div>
                                </div>
                                <div class="item-price">
                                    <div class="price-inner">
                                        <i class="fa fa-star"></i>
                                        <h3><span class="convertedPrice">{{app.session.get('currency')|currencysymbol}} {{room.price|convertcurrency}}</span><input type="hidden" value="{{room.price}}" name="priceXOF"></h3>
{#                                        <h4>$ 180.00</h4>#}
                                        <h5>PER NIGHT</h5>
                                        <a href="{{path('hotel_room_detail', {'id': room.id}) }}" class="btn">ROOM DETAIL</a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <!-- Rooms List End -->
                    
                    <!-- Pager -->
                    <div class="widget-pager">
                        {{ knp_pagination_render(rooms) }}
                    </div>
                    <!-- Pager End -->
                </div>
            </div>
            <!-- Section Rooms End -->
        </div>
        <!-- Site Main End -->
    {% endblock %}
